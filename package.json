{
  "name": "risk-management",
  "version": "3.0.0",
  "description": "Template for the Learning Journey Building side-by-side extensions on SAP BTP",
  "author": "m.haug@sap.com",
  "license": "SAP SAMPLE CODE LICENSE",
  "repository": "https://github.com/SAP-samples/sap-learning-extension-suite",
  "dependencies": {
    "@sap-cloud-sdk/http-client": "3.6.0",
    "@sap/cds": "^7",
    "@sap/cds-hana": "^2.0.0",
    "@sap/xssec": "^3.6.1",
    "express": "^4",
    "passport": "^0.7.0"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^1",
    "@sap/ux-specification": "^1.120.13"
  },
  "scripts": {
    "start:dev": "cds-serve",
    "start": "cds watch --profile hybrid",
    "reload": "curl localhost:8887/reload",
    "find": "lsof -i :4004",
    "watch-risk-management": "cds watch --open risk-management/webapp/index.html?sap-ui-xx-viewCache=false"
  },
  "cds": {
    "requires": {
      "multitenancy": true,
      "extensibility": true,
      "toggles": true,
      "API_BUSINESS_PARTNER": {
        "kind": "odata-v2",
        "model": "srv/external/API_BUSINESS_PARTNER",
        "credentials": {
          "destination": "BusinessPartnerDestination",
          "path": "/sap/opu/odata/sap/API_BUSINESS_PARTNER/"
        }
      },
      "Northwind": {
        "kind": "odata",
        "credentials": {
          "destination": "Northwind"
        }
      },
      "auth": {
        "kind": "mocked",
        "users": {
          "riskviewer": {
            "password": "initial",
            "attr": {
              "email": "risk.viewer@tester.sap.com"
            },
            "roles": [
              "RiskViewer"
            ]
          },
          "riskmanager": {
            "password": "initial",
            "attr": {
              "email": "risk.manager@tester.sap.com"
            },
            "roles": [
              "RiskManager"
            ]
          }
        }
      },
      "MyLocalServer": {
        "kind": "odata",
        "creadeantials": {
          "destination": "MyLocalServer"
        }
      },
      "[production]": {
        "db": "hana",
        "auth": "xsuaa"
      }
    },
    "i18n": {
      "default_language": "de"
    },
    "db": {
      "kind": "sqlite",
      "credentials": {
        "url": "db.sqlite"
      }
    }
  },
  "sapux": [
    "app/risk-management"
  ]
}
