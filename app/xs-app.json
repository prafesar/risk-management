{
  "welcomeFile": "app/launchpad.html",
  "authenticationMethod": "none",
  "auth": {
    "kind": "mocked",
    "users": {
      "riskviewer": {
        "password": "initial",
        "attr": {
          "email": "risk.viewer@tester.sap.com"
        },
        "roles": ["RiskViewer"]
      },
      "riskmanager": {
        "password": "initial",
        "attr": {
          "email": "risk.manager@tester.sap.com"
        },
        "roles": ["RiskManager"]
      }
    }
  },
  "routes": [
    {
      "source": "^/app/(.*)$",
      "target": "$1",
      "localDir": ".",
      "cacheControl": "no-cache, no-store, must-revalidate"
    },
    {
      "source": "^/appconfig/",
      "localDir": ".",
      "cacheControl": "no-cache, no-store, must-revalidate"
    },
    {
      "source": "^/(.*)$",
      "target": "$1",
      "destination": "srv-api",
      "csrfProtection": true
    }
  ]
}
